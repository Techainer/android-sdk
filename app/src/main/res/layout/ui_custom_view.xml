<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_live_ness_flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_all"
        android:paddingHorizontal="30dp"
        android:text="Liveness Flash"
        android:stateListAnimator="@null"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_register_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:paddingHorizontal="30dp"
        android:text="Register Face"
        android:stateListAnimator="@null"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imv_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp" />

</FrameLayout>